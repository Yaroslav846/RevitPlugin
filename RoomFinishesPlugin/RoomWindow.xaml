<Window x:Class="RevitPlugin.RoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отделка помещений" Height="550" Width="850" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- ЦВЕТА -->
        <SolidColorBrush x:Key="MainBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#252526"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#3E3E42"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#F1F1F1"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#007ACC"/>
        <SolidColorBrush x:Key="AccentHover" Color="#1C97EA"/>
        <SolidColorBrush x:Key="GridHeaderBg" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ScrollThumb" Color="#4E4E50"/>
        <SolidColorBrush x:Key="ScrollThumbHover" Color="#6E6E70"/>
        <SolidColorBrush x:Key="SearchBg" Color="#333337"/>

        <!-- Стиль скроллбара -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle" Background="{StaticResource ScrollThumb}" CornerRadius="4"
                                Height="{TemplateBinding Height}" SnapsToDevicePixels="True" Width="{TemplateBinding Width}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="rectangle" Value="{StaticResource ScrollThumbHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ КНОПКИ -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ ПОИСКА -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SearchBg}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="2">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ ТАБЛИЦЫ -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="RowBackground" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource GridHeaderBg}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource MainBackground}" BorderBrush="{StaticResource AccentBlue}" BorderThickness="1">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 0. Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- 1. Панель управления -->
                <RowDefinition Height="*"/>
                <!-- 2. Таблица -->
                <RowDefinition Height="Auto"/>
                <!-- 3. Кнопки действий -->
                <RowDefinition Height="Auto"/>
                <!-- 4. Статус -->
            </Grid.RowDefinitions>

            <!-- 0. ЗАГОЛОВОК -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="ОТДЕЛКА ПОМЕЩЕНИЙ" Foreground="{StaticResource PrimaryText}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="✕" HorizontalAlignment="Right" Click="btnClose_Click" BorderThickness="0" Foreground="Gray" FontSize="14" Width="30" Height="30"/>
            </Grid>

            <!-- 1. ВЕРХНЯЯ ПАНЕЛЬ (Добавлен поиск) -->
            <Border Grid.Row="1" BorderBrush="{StaticResource PanelBorder}" BorderThickness="1" Padding="10" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Кнопка Расчета -->
                        <ColumnDefinition Width="*"/>
                        <!-- Пустота -->
                        <ColumnDefinition Width="200"/>
                        <!-- Поиск -->
                    </Grid.ColumnDefinitions>

                    <Button Name="btnCalculate" Content="Рассчитать все ⟳" Click="btnCalculate_Click" Width="150"/>

                    <!-- Поле поиска -->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Поиск:" VerticalAlignment="Center" Foreground="Gray" Margin="0,0,5,0"/>
                        <TextBox x:Name="txtSearch" Grid.Column="1" TextChanged="txtSearch_TextChanged"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- 2. ТАБЛИЦА -->
            <DataGrid x:Name="dgRooms" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True" BorderThickness="0">
                <DataGrid.Resources>
                    <Style x:Key="ScrollThumb" TargetType="{x:Type Thumb}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Thumb}">
                                    <Border Background="#4E4E50" CornerRadius="4"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="{x:Type ScrollBar}">
                        <Setter Property="Width" Value="10"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="Transparent">
                                        <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource ScrollThumb}" />
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <!-- ТЕПЕРЬ СОРТИРУЕТ ПО SortNumber (1, 2, 10), а показывает RoomNumber -->
                    <DataGridTextColumn Header="№" Binding="{Binding RoomNumber}" SortMemberPath="SortNumber" Width="50"/>

                    <DataGridTextColumn Header="Имя помещения" Binding="{Binding RoomName}" SortMemberPath="RoomName" Width="*"/>
                    <DataGridTextColumn Header="Высота" Binding="{Binding Height}" SortMemberPath="Height" Width="80"/>
                    <DataGridTextColumn Header="Проемы" Binding="{Binding OpeningsCount}" SortMemberPath="OpeningsCount" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Плинтус (м)" Binding="{Binding SkirtingLength}" SortMemberPath="SkirtingLength" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Padding" Value="0,0,5,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Стены (м²)" Binding="{Binding WallArea}" SortMemberPath="WallArea" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 3. КНОПКИ ДЕЙСТВИЙ -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,15">
                <Button Name="btnClear" Content="Сброс 3D" Margin="0,0,10,0" Width="100" Height="35" Click="btnClear_Click" IsEnabled="False" BorderBrush="#666" Foreground="#CCC"/>
                <Button Name="btnHighlight" Content="Показать в 3D" Margin="0,0,10,0" Width="140" Height="35" Click="btnHighlight_Click" IsEnabled="False"/>
                <Button Name="btnWrite" Content="Записать в Revit" Width="140" Height="35" Click="btnWrite_Click" IsEnabled="False" Background="{StaticResource AccentBlue}" BorderThickness="0"/>
            </StackPanel>

            <!-- 4. СТАТУС БАР -->
            <Grid Grid.Row="4">
                <ProgressBar Name="pbStatus" Height="4" Minimum="0" Maximum="100" Foreground="{StaticResource AccentBlue}" Background="#333333" BorderThickness="0" VerticalAlignment="Bottom"/>
                <TextBlock Name="txtStatus" Text="Готов к работе" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="11" Foreground="Gray" Margin="0,-5,0,5"/>
            </Grid>

        </Grid>
    </Border>
</Window>